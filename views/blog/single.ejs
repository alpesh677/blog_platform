<div class="container mx-auto px-4 py-8">
    <article class="max-w-3xl mx-auto">
        <h1 class="text-4xl font-bold mb-4"><%= blog.title %></h1>
        <div class="mb-4 text-gray-600">
            <span>By <%= blog.author.username %></span>
            <span class="mx-2">|</span>
            <span><%= new Date(blog.createdAt).toLocaleDateString() %></span>
        </div>
        <% if (blog.image) { %>
            <img src="<%= blog.image %>" alt="<%= blog.title %>" class="w-full h-64 object-cover rounded-lg mb-6">
        <% } %>
        <div class="prose max-w-none">
            <%- blog.content %>
        </div>
        <div class="mt-6">
            <h3 class="text-xl font-semibold mb-2">Categories:</h3>
            <div class="flex flex-wrap gap-2">
                <% blog.categories.forEach(function(category) { %>
                    <span class="bg-gray-200 rounded-full px-3 py-1 text-sm"><%= category.name %></span>
                <% }); %>
            </div>
        </div>
    </article>
</div>
