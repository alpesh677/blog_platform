<div class="container mx-auto px-4 sm:px-8">
<div class="py-8">
    <div class="overflow-x-auto bg-white shadow-md rounded-lg">
        <table class="min-w-full leading-normal">
            <thead>
            <tr>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                Title
                </th>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                Category
                </th>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                Description
                </th>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                Author
                </th>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                Created At
                </th>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                Actions
                </th>
            </tr>
            </thead>
            <tbody>
            <% blogs.forEach(function(blog, index) { %>
                <tr class="<%= index % 2 === 0 ? 'bg-white' : 'bg-gray-50' %> hover:bg-gray-100">
                <td class="px-5 py-5 border-b border-gray-200 text-sm">
                    <div class="flex items-center">
                    <div class="flex-shrink-0 w-10 h-10">
                        <img class="w-full h-full rounded-full" src="<%= blog.image %>" alt="<%= blog.title %>">
                    </div>
                    <div class="ml-3">
                        <p class="text-gray-900 whitespace-no-wrap font-medium"><%= blog.title %></p>
                        <p class="text-gray-600 whitespace-no-wrap"><%= blog.slug %></p>
                    </div>
                    </div>
                </td>
                <td class="px-5 py-5 border-b border-gray-200 text-sm">
                    <% if (blog.categories && blog.categories.length > 0) { %>
                    <div class="flex flex-wrap gap-1">
                        <% blog.categories.forEach(function(category) { %>
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                            <%= category.name %>
                        </span>
                        <% }); %>
                    </div>
                    <% } else { %>
                    <span class="text-gray-500">No category</span>
                    <% } %>
                </td>
                <td class="px-5 py-5 border-b border-gray-200 text-sm">
                    <p class="text-gray-900 whitespace-no-wrap truncate max-w-xs"><%= blog.description %></p>
                </td>
                <td class="px-5 py-5 border-b border-gray-200 text-sm">
                    <p class="text-gray-900 whitespace-no-wrap"><%= blog.author.username %></p>
                </td>
                <td class="px-5 py-5 border-b border-gray-200 text-sm">
                    <p class="text-gray-900 whitespace-no-wrap"><%= new Date(blog.createdAt).toLocaleDateString() %></p>
                </td>
                <td class="px-5 py-5 border-b border-gray-200 text-sm">
                    <div class="flex space-x-2">
                    <a href="/api/v1/admin/blogs/edit/<%= blog._id %>" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-1 px-3 rounded">
                        Edit
                    </a>
                    <form action="/api/v1/admin/blogs/delete/<%= blog._id %>" method="POST" class="inline">
                        <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-3 rounded" onclick="return confirm('Are you sure you want to delete this blog?')">
                        Delete
                        </button>
                    </form>
                    </div>
                </td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    </div>
</div>
</div>